<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="id값 전달"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/iv_profile_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="16dp"/>
            <ImageView
                android:id="@+id/iv_profile_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_create"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="60dp"/>
            <ImageView
                android:id="@+id/iv_profile_threads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_threads"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="104dp"/>

            <ImageView
                android:id="@+id/iv_profile_eclipse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ellipse_81"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="73dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/tv_profile_postnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_profile_eclipse"
                android:layout_marginTop="92dp"
                android:layout_marginStart="55dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_profile_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="게시물"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="134dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="144dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_profile_followernum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_profile_postnum"
                android:layout_marginTop="92dp"
                android:layout_marginStart="55dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_profile_follower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="팔로워"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="134dp"
                app:layout_constraintStart_toEndOf="@id/tv_profile_post"
                android:layout_marginStart="41dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_profile_followingnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_profile_followernum"
                android:layout_marginTop="92dp"
                android:layout_marginStart="55dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_profile_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="팔로잉"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="134dp"
                app:layout_constraintStart_toEndOf="@id/tv_profile_follower"
                android:layout_marginStart="41dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_profile_bottom_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="쿠잇"
                app:layout_constraintTop_toBottomOf="@id/iv_profile_eclipse"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="13dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <FrameLayout
                android:id="@+id/fl_profile_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_profile_bottom_name"
                android:layout_marginTop="9dp">

                <ImageView
                    android:id="@+id/iv_profile_rectangle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/ic_profile_rectangle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_bottom_name" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="47dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="48dp"
                    android:text="프로필 편집"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

            </FrameLayout>
            <FrameLayout
                android:id="@+id/fl_profile_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/fl_profile_edit"
                app:layout_constraintTop_toBottomOf="@id/tv_profile_bottom_name"
                android:layout_marginTop="9dp">

                <!--<ImageView
                    android:id="@+id/iv_profile_rectangle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/ic_profile_rectangle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_bottom_name" />-->
                <ImageView
                    android:id="@+id/iv_profile_rectangle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_profile_rectangle"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_bottom_name"
                    app:layout_constraintStart_toEndOf="@id/iv_profile_rectangle"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="47dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="48dp"
                    android:layout_marginBottom="8dp"
                    android:text="프로필 공유"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </FrameLayout>
            <FrameLayout
                android:id="@+id/fl_profile_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/fl_profile_share"
                app:layout_constraintTop_toBottomOf="@id/tv_profile_bottom_name"
                android:layout_marginTop="9dp">
                <ImageView
                    android:id="@+id/iv_profile_rectangle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_people_rectangle"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_bottom_name"
                    app:layout_constraintStart_toEndOf="@id/fl_profile_share"
                    android:layout_marginTop="9dp"/>
                <ImageView
                    android:id="@+id/iv_profile_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_people"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>