<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="10dp">

    <FrameLayout
        android:id="@+id/fl_fragment_my_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="11dp"
        android:layout_marginTop="13dp">

        <ImageView
            android:id="@+id/iv_home_my_story_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/story_gray_ring">

        </ImageView>

        <ImageView
            android:id="@+id/iv_home_my_story_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/story_color_ring"
            android:visibility="gone">

        </ImageView>
    </FrameLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_fragment_story_profile"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/img_sample"
        tools:ignore="MissingConstraints"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
        app:layout_constraintTop_toTopOf="@id/fl_fragment_my_story"
        app:layout_constraintStart_toStartOf="@id/fl_fragment_my_story"
        app:layout_constraintEnd_toEndOf="@id/fl_fragment_my_story"
        app:layout_constraintBottom_toBottomOf="@id/fl_fragment_my_story">

    </com.google.android.material.imageview.ShapeableImageView>

    <ImageView
        android:id="@+id/iv_home_my_story_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/story_plus_logo"
        app:layout_constraintBottom_toBottomOf="@id/siv_fragment_story_profile"
        app:layout_constraintEnd_toEndOf="@id/siv_fragment_story_profile">

    </ImageView>


    <TextView
        android:id="@+id/tv_my_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="내 스토리"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/siv_fragment_story_profile"
        app:layout_constraintStart_toStartOf="@id/siv_fragment_story_profile"
        app:layout_constraintTop_toBottomOf="@id/siv_fragment_story_profile"
        tools:ignore="MissingConstraints">

    </TextView>

    
</androidx.constraintlayout.widget.ConstraintLayout>