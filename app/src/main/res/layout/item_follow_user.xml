<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siv_item_follow_user_profile"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="#D9D9D9"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.google.android.material.imageview.ShapeableImageView>


        <TextView
            android:id="@+id/tv_item_follow_profile_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="seaweed_mh"
            app:layout_constraintStart_toEndOf="@id/siv_item_follow_user_profile"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="11dp"
            android:textStyle="bold"
            android:textSize="12sp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="권민혁"
            app:layout_constraintTop_toBottomOf="@id/tv_item_follow_profile_id"
            app:layout_constraintStart_toStartOf="@id/tv_item_follow_profile_id"
            android:textSize="12sp">

        </TextView>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siv_item_profile_delete_box"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="#EFEFEF"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/siv_item_follow_user_profile"
            app:layout_constraintBottom_toBottomOf="@id/siv_item_follow_user_profile"
            android:layout_marginEnd="16dp">

        </com.google.android.material.imageview.ShapeableImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/siv_item_profile_delete_box"
            app:layout_constraintStart_toStartOf="@id/siv_item_profile_delete_box"
            app:layout_constraintEnd_toEndOf="@id/siv_item_profile_delete_box"
            app:layout_constraintBottom_toBottomOf="@id/siv_item_profile_delete_box">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>