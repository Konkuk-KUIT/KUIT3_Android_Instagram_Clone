<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserTagedPostFragment">
    <GridLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:columnCount="3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_post1"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:src="@drawable/img_sample"
            android:adjustViewBounds="true"
            android:layout_column="0"></ImageView>
        <ImageView
            android:id="@+id/iv_post2"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/img_sample"
            android:layout_column="1"></ImageView>
        <ImageView
            android:id="@+id/iv_post3"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_sample"
            android:layout_column="2"></ImageView>
        <ImageView
            android:id="@+id/iv_post4"
            android:layout_width="0dp"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/img_sample"
            android:layout_column="0"></ImageView>
        <ImageView
            android:id="@+id/iv_post5"
            android:layout_width="0dp"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/img_sample"
            android:layout_column="1"></ImageView>
        <ImageView
            android:id="@+id/iv_post6"
            android:layout_width="0dp"
            android:layout_row="1"
            android:adjustViewBounds="true"
            android:layout_columnWeight="1"
            android:src="@drawable/img_sample"
            android:layout_column="2"></ImageView>

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>