<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_people_profile"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/ic_no_profile"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_people_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_people_profile"
        app:layout_constraintStart_toEndOf="@id/iv_people_profile"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:text="id 들어갈 자리"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_people_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 들어갈 자리"
        android:textColor="#737373"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_people_id"
        app:layout_constraintStart_toStartOf="@id/tv_people_id"/>

    <ImageView
        android:id="@+id/iv_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_button"
        app:layout_constraintStart_toEndOf="@id/iv_people_profile"
        app:layout_constraintTop_toTopOf="@id/iv_people_profile"
        android:layout_marginStart="224dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/iv_delete_button"
        app:layout_constraintTop_toTopOf="@id/iv_delete_button"
        app:layout_constraintEnd_toEndOf="@id/iv_delete_button"
        app:layout_constraintBottom_toBottomOf="@id/iv_delete_button"
        android:text="삭제"
        android:textSize="12sp"
        android:textColor="@color/black"/>


</androidx.constraintlayout.widget.ConstraintLayout>