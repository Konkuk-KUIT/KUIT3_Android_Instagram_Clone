<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siv_home_story"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/img_sample2"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

    <FrameLayout
            android:id="@+id/fl_home_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/siv_home_story"
            app:layout_constraintEnd_toEndOf="@id/siv_home_story"
            app:layout_constraintStart_toStartOf="@id/siv_home_story"
            app:layout_constraintTop_toTopOf="@id/siv_home_story">

        <ImageView
                android:id="@+id/iv_home_story_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/story_gray"
                android:visibility="gone" />

        <ImageView
                android:id="@+id/iv_home_story_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/story_color" />

    </FrameLayout>

    <TextView
            android:id="@+id/tv_home_story_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="수정될 ID"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/siv_home_story"
            app:layout_constraintStart_toStartOf="@id/siv_home_story"
            app:layout_constraintTop_toBottomOf="@id/siv_home_story" />

</androidx.constraintlayout.widget.ConstraintLayout>