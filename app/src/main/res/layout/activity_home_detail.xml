<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeDetailActivity">

    <TextView
        android:id="@+id/tv_top_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 들어가는 곳"
        android:fontFamily="@font/instagram_sans_light"
        android:textColor="#666"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="138dp"
        android:layout_marginEnd="135dp"
        />

    <TextView
        android:id="@+id/tv_posting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시물"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_top_id"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="163dp"
        android:layout_marginEnd="163dp"
        android:fontFamily="@font/instagram_sans_bold"
        />

    <ImageView
        android:id="@+id/iv_btn_chevron_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chevron_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp"
        app:layout_constraintEnd_toStartOf="@id/tv_top_id"
        android:layout_marginEnd="100dp"
        />

    <View
        android:id="@+id/line_hd"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DBDBDB"
        app:layout_constraintTop_toBottomOf="@id/tv_posting"
        android:layout_marginTop="6dp"
        />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_hd_profile_img"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/img_sample"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/line_hd"
        android:layout_marginTop="12dp"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
        />

    <TextView
        android:id="@+id/tv_hd_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 들어가는 곳"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/instagram_sans_bold"
        app:layout_constraintStart_toEndOf="@id/siv_hd_profile_img"
        android:layout_marginStart="9dp"
        app:layout_constraintTop_toBottomOf="@id/line_hd"
        android:layout_marginTop="18dp"
        />

    <ImageView
        android:id="@+id/iv_hd_post_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_post_more"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_hd_id"
        android:layout_marginStart="218dp"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_hd_post_pic"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:src="@drawable/ic_post_pic"
        app:layout_constraintTop_toBottomOf="@id/siv_hd_profile_img"
        android:scaleType="fitCenter"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        />

    <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
        android:id="@+id/di_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/fl_hd_like"
        android:layout_marginStart="131dp"
        app:layout_constraintTop_toTopOf="@id/fl_hd_like"
        app:layout_constraintEnd_toStartOf="@id/ic_hd_save"
        android:layout_marginEnd="128dp"
        app:dampingRatio="0.5"
        app:dotsColor="#0097FE"
        app:dotsCornerRadius="100dp"
        app:dotsSize="6dp"
        app:dotsSpacing="4dp"
        app:stiffness="300"/>

    <FrameLayout
        android:id="@+id/fl_hd_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/vp_hd_post_pic"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/ic_hd_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_like"
            />

        <ImageView
            android:id="@+id/ic_hd_like_filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_like_filled"
            />


    </FrameLayout>




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_comment"
        app:layout_constraintStart_toEndOf="@id/fl_hd_like"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toTopOf="@id/fl_hd_like"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share"
        app:layout_constraintStart_toEndOf="@id/fl_hd_like"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toTopOf="@id/fl_hd_like"
        />

    <ImageView
        android:id="@+id/ic_hd_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_save"
        app:layout_constraintTop_toTopOf="@id/fl_hd_like"
        app:layout_constraintTop_toBottomOf="@id/iv_hd_post_more"
        app:layout_constraintStart_toEndOf="@id/fl_hd_like"
        android:layout_marginStart="320dp"
        />

    <TextView
        android:id="@+id/tv_hd_like_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kuit.official"
        android:fontFamily="@font/instagram_sans_bold"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toBottomOf="@id/fl_hd_like"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="님 외"
        android:fontFamily="@font/instagram_sans_light"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="77dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_hd_like_account"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여러 명"
        android:textColor="@color/black"
        android:fontFamily="@font/instagram_sans_bold"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="104dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_hd_like_account"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이 좋아합니다."
        android:fontFamily="@font/instagram_sans_light"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="140dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_hd_like_account"
        />

    <TextView
        android:id="@+id/tv_hd_comment_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id 들어가는.."
        android:fontFamily="@font/instagram_sans_bold"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_hd_like_account"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/tv_hd_post_content"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="content 들어가는 자리"
        android:fontFamily="@font/instagram_sans_medium"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/tv_hd_comment_account"
        app:layout_constraintTop_toTopOf="@id/tv_hd_comment_account"
        android:layout_marginStart="4dp"/>

    <TextView
        android:id="@+id/tv_hd_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더보기"
        android:fontFamily="@font/instagram_sans_light"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/tv_hd_post_content"
        app:layout_constraintTop_toTopOf="@id/tv_hd_comment_account"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"
        />

    <TextView
        android:id="@+id/tv_hd_all_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글 모두 보기"
        android:fontFamily="@font/instagram_sans_light"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_hd_comment_account"
        android:layout_marginTop="6dp"
        />
    <TextView
        android:id="@+id/tv_hd_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024년 03월"
        android:textSize="12sp"
        android:fontFamily="@font/instagram_sans_light"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_hd_all_comments"
        android:layout_marginTop="6dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>