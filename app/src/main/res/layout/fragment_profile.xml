<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_profile_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="id값이 들어가는 자리"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_thread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_threads"
                app:layout_constraintEnd_toStartOf="@+id/iv_create"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_create"
                app:layout_constraintEnd_toStartOf="@id/iv_menu"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/siv_profile_img"
                android:layout_width="79dp"
                android:layout_height="79dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="73dp"
                android:src="@drawable/img_sample"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

            <FrameLayout
                android:id="@+id/fl_profile_story"
                android:layout_width="91dp"
                android:layout_height="91dp"
                app:layout_constraintBottom_toBottomOf="@id/siv_profile_img"
                app:layout_constraintEnd_toEndOf="@id/siv_profile_img"
                app:layout_constraintStart_toStartOf="@id/siv_profile_img"
                app:layout_constraintTop_toTopOf="@id/siv_profile_img">

                <ImageView
                    android:id="@+id/iv_profile_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_story_gray" />

                <ImageView
                    android:id="@+id/iv_profile_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_story_color"
                    android:visibility="gone" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_post_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="19dp"
                android:text="10"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/siv_profile_img"
                app:layout_constraintTop_toTopOf="@id/siv_profile_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게시물"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/tv_post_count"
                app:layout_constraintStart_toStartOf="@+id/tv_post_count"
                app:layout_constraintTop_toBottomOf="@+id/tv_post_count" />

            <TextView
                android:id="@+id/tv_follower_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:text="10"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/tv_post_count"
                app:layout_constraintTop_toTopOf="@+id/tv_post_count" />

            <TextView
                android:id="@+id/tv_follower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팔로워"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/tv_follower_count"
                app:layout_constraintStart_toStartOf="@+id/tv_follower_count"
                app:layout_constraintTop_toBottomOf="@+id/tv_follower_count" />

            <TextView
                android:id="@+id/tv_following_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:text="10"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/tv_follower_count"
                app:layout_constraintTop_toTopOf="@+id/tv_follower_count" />

            <TextView
                android:id="@+id/tv_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="49dp"
                android:layout_marginTop="109dp"
                android:text="팔로잉"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/tv_follower_count"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="12dp"
                android:text="쿠잇"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/siv_profile_img" />

            <ImageView
                android:id="@+id/iv_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/ic_big_btn_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필 편집"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/iv_edit_profile"
                app:layout_constraintEnd_toEndOf="@id/iv_edit_profile"
                app:layout_constraintStart_toStartOf="@id/iv_edit_profile"
                app:layout_constraintTop_toTopOf="@id/iv_edit_profile" />

            <ImageView
                android:id="@+id/iv_share_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/ic_big_btn_bg"
                app:layout_constraintStart_toEndOf="@id/iv_edit_profile"
                app:layout_constraintTop_toBottomOf="@id/tv_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필 공유"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/iv_share_profile"
                app:layout_constraintEnd_toEndOf="@id/iv_share_profile"
                app:layout_constraintStart_toStartOf="@id/iv_share_profile"
                app:layout_constraintTop_toTopOf="@id/iv_share_profile" />

            <ImageView
                android:id="@+id/iv_add_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_sm_btn_bg"
                app:layout_constraintStart_toEndOf="@id/iv_share_profile"
                app:layout_constraintTop_toTopOf="@id/iv_share_profile" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_people"
                app:layout_constraintBottom_toBottomOf="@id/iv_add_friend"
                app:layout_constraintEnd_toEndOf="@id/iv_add_friend"
                app:layout_constraintStart_toStartOf="@id/iv_add_friend"
                app:layout_constraintTop_toTopOf="@id/iv_add_friend" />

            <TextView
                android:id="@+id/tv_highlight_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스토리 하이라이트"
                app:layout_constraintTop_toBottomOf="@id/iv_edit_profile"
                app:layout_constraintStart_toStartOf="@id/iv_edit_profile"
                android:layout_marginTop="18dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_highlight_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좋아하는 스토리를 프로필에 보관해보세요"
                app:layout_constraintTop_toBottomOf="@id/tv_highlight_title"
                app:layout_constraintStart_toStartOf="@id/tv_highlight_title"
                android:textColor="@color/black"
                android:textSize="12sp"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/siv_add_highlight"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="@id/tv_highlight_description"
                app:layout_constraintTop_toBottomOf="@id/tv_highlight_description"
                android:layout_marginTop="13dp"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_story_gray"
                app:layout_constraintStart_toStartOf="@id/siv_add_highlight"
                app:layout_constraintTop_toTopOf="@id/siv_add_highlight"
                app:layout_constraintBottom_toBottomOf="@id/siv_add_highlight"
                app:layout_constraintEnd_toEndOf="@id/siv_add_highlight"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_plus"
                app:layout_constraintStart_toStartOf="@id/siv_add_highlight"
                app:layout_constraintTop_toTopOf="@id/siv_add_highlight"
                app:layout_constraintBottom_toBottomOf="@id/siv_add_highlight"
                app:layout_constraintEnd_toEndOf="@id/siv_add_highlight"/>

            <TextView
                android:id="@+id/tv_add_story"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로 만들기"
                android:textSize="11sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/siv_add_highlight"
                app:layout_constraintStart_toStartOf="@id/siv_add_highlight"
                app:layout_constraintEnd_toEndOf="@id/siv_add_highlight"
                android:layout_marginTop="6dp"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_no_profile"
                app:layout_constraintStart_toEndOf="@id/siv_add_highlight"
                app:layout_constraintTop_toTopOf="@id/siv_add_highlight"
                android:layout_marginStart="16dp"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_no_profile"
                app:layout_constraintStart_toEndOf="@id/siv_add_highlight"
                app:layout_constraintTop_toTopOf="@id/siv_add_highlight"
                android:layout_marginStart="92dp"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_no_profile"
                app:layout_constraintStart_toEndOf="@id/siv_add_highlight"
                app:layout_constraintTop_toTopOf="@id/siv_add_highlight"
                android:layout_marginStart="168dp"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tl_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_add_story"
                app:tabIndicatorAnimationMode="linear"
                app:tabIndicatorColor="@color/black"
                app:tabIndicatorFullWidth="true"
                app:tabRippleColor="#BDBDBD"
                app:tabIconTint="@color/black"
                android:layout_marginTop="16dp"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_profile_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/tl_profile"
                app:layout_constraintBottom_toBottomOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>