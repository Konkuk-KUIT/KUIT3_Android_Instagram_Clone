<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <TextView
        android:id="@+id/tv_profile_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id 바뀌는 곳"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        />

    <ImageView
        android:id="@+id/iv_btn_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_threads"
        app:layout_constraintEnd_toStartOf="@id/iv_btn_create"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/tv_profile_id"

        />
    <ImageView
        android:id="@+id/iv_btn_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_create"
        app:layout_constraintEnd_toStartOf="@id/iv_btn_menu"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/tv_profile_id"
        />
    <ImageView
        android:id="@+id/iv_btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/tv_profile_id"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="320dp"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_profile_img"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:src="@drawable/img_sample"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_id"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="262dp"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"/>

    <TextView
        android:id="@+id/tv_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쿠잇"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="324dp"
        app:layout_constraintTop_toBottomOf="@id/iv_profile_img"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tv_post_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="191dp"
        android:layout_marginStart="153dp"
        android:layout_marginTop="91dp"
        />
    <TextView
        android:id="@+id/tv_follower_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="120dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="91dp"
        />
    <TextView
        android:id="@+id/tv_following_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="47dp"
        android:layout_marginStart="297dp"
        android:layout_marginTop="91dp"
        />
    <TextView
        android:id="@+id/tv_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시물"
        android:textSize="11sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_post_num"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="185dp"
        />
    <TextView
        android:id="@+id/tv_follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팔로워"
        android:textSize="11sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_follower_num"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="216dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="113dp"
        />
    <TextView
        android:id="@+id/tv_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팔로잉"
        android:textSize="11sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_following_num"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="289dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        />
    <ImageView
        android:id="@+id/iv_profile_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_profie_edit"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_name"
        android:layout_marginTop="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="199dp"
        />
    <TextView
        android:id="@+id/tv_profile_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 편집"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/iv_profile_btn1"
        android:layout_marginStart="47dp"
        app:layout_constraintTop_toTopOf="@id/iv_profile_btn1"
        android:layout_marginTop="8dp"
        />
    <ImageView
        android:id="@+id/iv_profile_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_profie_edit"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="165dp"
        app:layout_constraintTop_toTopOf="@id/iv_profile_btn1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="47dp"

        />
    <TextView
        android:id="@+id/tv_profile_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 공유"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/iv_profile_btn2"
        android:layout_marginStart="47dp"
        app:layout_constraintTop_toTopOf="@id/iv_profile_btn1"
        android:layout_marginTop="8dp"
        />
    <ImageView
        android:id="@+id/iv_btn_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_profile_people"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="317dp"
        app:layout_constraintTop_toTopOf="@id/iv_profile_btn1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="13dp"
        />
    <ImageView
        android:id="@+id/iv_ic_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_people"
        app:layout_constraintStart_toStartOf="@id/iv_btn_people"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toTopOf="@id/iv_btn_people"
        android:layout_marginTop="3dp"
        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_grid_tag_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="378dp"
        />
    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tl_grid_tag_tab"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>