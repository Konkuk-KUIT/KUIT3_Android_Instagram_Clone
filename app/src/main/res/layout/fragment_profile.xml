<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_home_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_home_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="21dp"
                android:src="@drawable/ic_like"
                app:layout_constraintEnd_toStartOf="@id/iv_home_share"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_home_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="14dp"
                android:src="@drawable/ic_share"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/siv_home_my_story"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/img_sample"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_home_logo"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"  />

            <FrameLayout
                android:id="@+id/fl_home_my_story"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/siv_home_my_story"
                app:layout_constraintEnd_toEndOf="@id/siv_home_my_story"
                app:layout_constraintStart_toStartOf="@id/siv_home_my_story"
                app:layout_constraintTop_toTopOf="@id/siv_home_my_story">

                <ImageView
                    android:id="@+id/iv_home_my_story_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_story_gray"/>

                <ImageView
                    android:id="@+id/iv_home_my_story_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_story_color"
                    android:visibility="gone" />

            </FrameLayout>
            S
            <ImageView
                android:id="@+id/iv_home_my_story_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_story_plus"
                app:layout_constraintBottom_toBottomOf="@id/siv_home_my_story"
                app:layout_constraintEnd_toEndOf="@id/siv_home_my_story" />

            <TextView
                android:id="@+id/tv_home_my_story"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="내 스토리"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/siv_home_my_story"
                app:layout_constraintStart_toStartOf="@id/siv_home_my_story"
                app:layout_constraintTop_toBottomOf="@id/siv_home_my_story" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/siv_home_story_1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="17dp"
                android:src="@drawable/img_sample2"
                app:layout_constraintBottom_toBottomOf="@id/siv_home_my_story"
                app:layout_constraintStart_toEndOf="@id/siv_home_my_story"
                app:layout_constraintTop_toTopOf="@id/siv_home_my_story"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

            <FrameLayout
                android:id="@+id/fl_home_story_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/siv_home_story_1"
                app:layout_constraintEnd_toEndOf="@id/siv_home_story_1"
                app:layout_constraintStart_toStartOf="@id/siv_home_story_1"
                app:layout_constraintTop_toTopOf="@id/siv_home_story_1">

                <ImageView
                    android:id="@+id/iv_home_story_1_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_story_gray"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_home_story_1_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_story_color" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_home_story_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="kuit.official"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/siv_home_story_1"
                app:layout_constraintStart_toStartOf="@id/siv_home_story_1"
                app:layout_constraintTop_toBottomOf="@id/siv_home_story_1" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/siv_home_story_2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="17dp"
                android:src="@drawable/img_sample2"
                app:layout_constraintBottom_toBottomOf="@id/siv_home_story_1"
                app:layout_constraintStart_toEndOf="@id/siv_home_story_1"
                app:layout_constraintTop_toTopOf="@id/siv_home_story_1"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

            <FrameLayout
                android:id="@+id/fl_home_story_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/siv_home_story_2"
                app:layout_constraintEnd_toEndOf="@id/siv_home_story_2"
                app:layout_constraintStart_toStartOf="@id/siv_home_story_2"
                app:layout_constraintTop_toTopOf="@id/siv_home_story_2">

                <ImageView
                    android:id="@+id/iv_home_story_2_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_story_gray"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_home_story_2_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_story_color" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_home_story_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="kuit.official"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/siv_home_story_2"
                app:layout_constraintStart_toStartOf="@id/siv_home_story_2"
                app:layout_constraintTop_toBottomOf="@id/siv_home_story_2" />

            <View
                android:id="@+id/v_home_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DBDBDB"
                app:layout_constraintTop_toBottomOf="@id/tv_home_my_story" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/siv_home_feed_1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/img_sample2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v_home_line"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

            <FrameLayout
                android:id="@+id/fl_home_feed_1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:layout_constraintBottom_toBottomOf="@id/siv_home_feed_1"
                app:layout_constraintEnd_toEndOf="@id/siv_home_feed_1"
                app:layout_constraintStart_toStartOf="@id/siv_home_feed_1"
                app:layout_constraintTop_toTopOf="@id/siv_home_feed_1">

                <ImageView
                    android:id="@+id/iv_home_feed_1_gray"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_story_gray"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_home_home_feed_1_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_story_color" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="kuit.official"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/fl_home_feed_1"
                app:layout_constraintStart_toEndOf="@id/fl_home_feed_1"
                app:layout_constraintTop_toTopOf="@id/fl_home_feed_1" />

            <ImageView
                android:id="@+id/iv_home_feed_1_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="14dp"
                android:src="@drawable/ic_options"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v_home_line" />

            <View
                android:id="@+id/v_home_feed_1"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_marginTop="6dp"
                android:background="#D9D9D9"
                app:layout_constraintTop_toBottomOf="@id/fl_home_feed_1"
                tools:layout_editor_absoluteX="-83dp" />

            <ImageView
                android:id="@+id/iv_home_feed_1_like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_like"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v_home_feed_1" />

            <ImageView
                android:id="@+id/iv_home_feed_1_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_comment"
                app:layout_constraintStart_toEndOf="@id/iv_home_feed_1_like"
                app:layout_constraintTop_toBottomOf="@id/v_home_feed_1" />

            <ImageView
                android:id="@+id/iv_home_feed_1_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_share"
                app:layout_constraintStart_toEndOf="@id/iv_home_feed_1_comments"
                app:layout_constraintTop_toBottomOf="@id/v_home_feed_1" />

            <ImageView
                android:id="@+id/iv_home_feed_1_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_save"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v_home_feed_1" />

            <TextView
                android:id="@+id/tv_home_feed_1_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:text="kuit.official"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_home_feed_1_like" />

            <TextView
                android:id="@+id/tv_home_feed_1_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:text="님 외"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_home_feed_1_text1"
                app:layout_constraintStart_toEndOf="@id/tv_home_feed_1_text1"
                app:layout_constraintTop_toTopOf="@id/tv_home_feed_1_text1" />

            <TextView
                android:id="@+id/tv_home_feed_1_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:text="여러 명"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_home_feed_1_text1"
                app:layout_constraintStart_toEndOf="@id/tv_home_feed_1_text2"
                app:layout_constraintTop_toTopOf="@id/tv_home_feed_1_text1" />

            <TextView
                android:id="@+id/tv_home_feed_1_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:text="이 좋아합니다."
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_home_feed_1_text1"
                app:layout_constraintStart_toEndOf="@id/tv_home_feed_1_text3"
                app:layout_constraintTop_toTopOf="@id/tv_home_feed_1_text1" />

            <TextView
                android:id="@+id/tv_home_feed_1_commenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="3dp"
                android:text="kuit.official"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_home_feed_1_text1" />

            <TextView
                android:id="@+id/tv_home_feed_1_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요."
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_home_feed_1_commenter"
                app:layout_constraintStart_toEndOf="@id/tv_home_feed_1_commenter"
                app:layout_constraintTop_toTopOf="@id/tv_home_feed_1_commenter" />

            <TextView
                android:id="@+id/tv_home_feed_1_show_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="...더 보기"
                android:textColor="#737373"
                app:layout_constraintBottom_toBottomOf="@id/tv_home_feed_1_commenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_home_feed_1_commenter" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>