<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileEditActivity">

    <ImageView
            android:id="@+id/iv_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_previeous"
            android:layout_marginTop="9dp"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tv_profile_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 편집"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <View
            android:id="@+id/v_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="42.51dp"
            android:background="#DBDBDB"
            app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siv_edit_profile_image"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="57dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#D9D9D9"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

    <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siv_edit_avatar_image"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginStart="189dp"
            android:layout_marginTop="57dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            app:strokeColor="#D9D9D9"
            app:strokeWidth="1dp"
    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

    <TextView
            android:id="@+id/tv_edit_prifile_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진 또는 아바타 수정"
            android:textSize="10sp"
            android:textColor="#029CFE"
            android:textStyle="bold"
            android:layout_marginTop="147dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <View
            android:id="@+id/v_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="174dp"
            android:background="#DBDBDB"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:layout_marginTop="15dp"
            android:layout_marginStart="14dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/v_line2"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tv_name_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용자의 이름이 들어가는 자리"
            android:layout_marginStart="101dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="@id/tv_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toStartOf="parent"/>

    <View
            android:layout_width="242dp"
            android:layout_height="1dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="17dp"
            android:background="#DBDBDB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name_input" />

    <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용자 이름"
            android:layout_marginTop="59dp"
            android:layout_marginStart="14dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/v_line2"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tv_nick_name_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용자의 아이디가 들어가는 자리"
            android:layout_marginStart="101dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="@id/tv_nick_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_nick_name"
            app:layout_constraintStart_toStartOf="parent"/>

    <View
            android:layout_width="242dp"
            android:layout_height="1dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="17dp"
            android:background="#DBDBDB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_nick_name_input" />


    <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별 대명사"
            android:layout_marginTop="103dp"
            android:layout_marginStart="14dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/v_line2"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tv_gender_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별 대명사"
            android:layout_marginStart="101dp"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="@+id/tv_gender"
            app:layout_constraintBottom_toBottomOf="@+id/tv_gender"
            app:layout_constraintStart_toStartOf="parent"/>

    <View
            android:layout_width="242dp"
            android:layout_height="1dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="17dp"
            android:background="#DBDBDB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_gender_input" />

    <TextView
            android:id="@+id/tv_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소개"
            android:layout_marginTop="147dp"
            android:layout_marginStart="14dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/v_line2"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tv_introduce_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소개"
            android:layout_marginStart="101dp"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="@+id/tv_introduce"
            app:layout_constraintBottom_toBottomOf="@+id/tv_introduce"
            app:layout_constraintStart_toStartOf="parent"/>

    <View
            android:layout_width="242dp"
            android:layout_height="1dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="17dp"
            android:background="#DBDBDB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_introduce_input" />

    <TextView
            android:id="@+id/tv_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="링크"
            android:layout_marginTop="191dp"
            android:layout_marginStart="14dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/v_line2"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tv_link_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="링크 추가"
            android:layout_marginStart="101dp"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="@+id/tv_link"
            app:layout_constraintBottom_toBottomOf="@+id/tv_link"
            app:layout_constraintStart_toStartOf="parent"/>

    <View
            android:id="@+id/v_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="#DBDBDB"
            app:layout_constraintTop_toBottomOf="@+id/tv_link_input" />

    <ImageView
            android:id="@+id/iv_link_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chevron_right"
            android:layout_marginTop="363dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/tv_switch_professional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로페셔널 계정으로 전환"
            android:textSize="12sp"
            android:textColor="#0097FE"
            app:layout_constraintTop_toTopOf="@+id/v_line3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="14dp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#DBDBDB"
            app:layout_constraintTop_toBottomOf="@+id/tv_switch_professional" />

    <TextView
            android:id="@+id/tv_personal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보 설정"
            android:textSize="12sp"
            android:textColor="#0097FE"
            app:layout_constraintTop_toTopOf="@+id/v_line3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="60dp"
            android:layout_marginStart="14dp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#DBDBDB"
            app:layout_constraintTop_toBottomOf="@+id/tv_personal_info" />

    <TextView
            android:id="@+id/tv_meta_verified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meta Verified 가입하기"
            android:textSize="12sp"
            android:textColor="#0097FE"
            app:layout_constraintTop_toTopOf="@+id/v_line3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="105dp"
            android:layout_marginStart="14dp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#DBDBDB"
            app:layout_constraintTop_toBottomOf="@+id/tv_meta_verified" />





</androidx.constraintlayout.widget.ConstraintLayout>