<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFragment">


    <ImageView
        android:id="@+id/ic_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/tv_detail_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JJUYAAAAAAA"
        android:fontFamily="@font/instagram_sans_headline"
        android:textColor="#666"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/tv_detail_post"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_detail_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시물"
        android:fontFamily="@font/instagram_sans_bold"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="29dp"/>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_post"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#DBDBDB"
        android:layout_marginTop="6dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_edit_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img_sample"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="14dp"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"/>
    <TextView
        android:id="@+id/tv_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kuit.official"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/siv_edit_profile"
        app:layout_constraintStart_toEndOf="@id/siv_edit_profile"
        android:layout_marginStart="16dp"/>

    <ImageView
        android:id="@+id/iv_detail_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_post_options"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:layout_marginTop="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_image"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintBottom_toTopOf="@id/fl_like"/>

    <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
        android:id="@+id/di_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vp_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:dampingRatio="0.5"
        app:dotsColor="#00CED1"
        app:dotsStrokeColor="#66CDAA"
        app:dotsCornerRadius="10dp"
        app:dotsSize="15dp"
        app:dotsSpacing="5dp"
        app:dotsStrokeWidth="5dp"
        app:stiffness="300"/>
    <FrameLayout
        android:id="@+id/fl_like"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@+id/vp_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="9dp"
        android:layout_marginStart="12dp">

        <ImageView
            android:id="@+id/iv_like_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_like_post"/>
        <ImageView
            android:id="@+id/iv_like_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_like_red"
            android:visibility="gone"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/iv_comment_post"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_comment_post"
        app:layout_constraintTop_toBottomOf="@id/vp_image"
        app:layout_constraintStart_toEndOf="@id/fl_like"
        android:layout_marginTop="9dp"
        android:layout_marginStart="12dp"/>
    <ImageView
        android:id="@+id/iv_share_post"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_share_post"
        app:layout_constraintTop_toBottomOf="@id/vp_image"
        app:layout_constraintStart_toEndOf="@id/iv_comment_post"
        android:layout_marginTop="9dp"
        android:layout_marginStart="12dp"/>

    <ImageView
        android:id="@+id/iv_save_post"
        android:layout_width="32dp"
        android:layout_height="29dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vp_image" />

    <TextView
        android:id="@+id/tv_post_like_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="kuit.oficial"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_save_post"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginStart="12dp"/>
    <TextView
        android:id="@+id/tv_post_like_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="님 외"
        app:layout_constraintTop_toBottomOf="@id/iv_save_post"
        app:layout_constraintStart_toEndOf="@id/tv_post_like_1"
        android:layout_marginTop="2dp"
        android:layout_marginStart="0dp"/>
    <TextView
        android:id="@+id/tv_post_like_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="여러 명"
        app:layout_constraintTop_toBottomOf="@id/iv_save_post"
        app:layout_constraintStart_toEndOf="@id/tv_post_like_2"
        android:layout_marginTop="2dp"
        android:layout_marginStart="7dp"/>
    <TextView
        android:id="@+id/tv_post_like_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="이 좋아합니다"
        app:layout_constraintTop_toBottomOf="@id/iv_save_post"
        app:layout_constraintStart_toEndOf="@id/tv_post_like_3"
        android:layout_marginTop="2dp"
        android:layout_marginStart="0dp"/>


    <TextView
        android:id="@+id/tv_post_comment_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="kuit.oficial"
        app:layout_constraintTop_toBottomOf="@id/tv_post_like_1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/tv_post_comment_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요. 쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요. 쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요."
        android:textColor="@color/black"
        android:fontFamily="@font/instagram_sans_medium"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginStart="75dp"
        app:layout_constraintStart_toEndOf="@id/tv_post_comment_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_post_like_1" />

    <TextView
        android:id="@+id/tv_post_comment_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:text="더보기"
        android:textColor="#808080"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/tv_post_comment_2"
        app:layout_constraintTop_toBottomOf="@id/iv_save_post"
        app:layout_goneMarginTop="28dp"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/tv_comment_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#666"
        android:text="댓글 모두 보기"
        android:fontFamily="@font/instagram_sans_light"
        app:layout_constraintTop_toBottomOf="@id/tv_post_comment_1"
        app:layout_constraintStart_toStartOf="@id/tv_post_comment_1"
        android:layout_marginTop="6dp"/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#666"
        android:text="2024년 4월"
        app:layout_constraintTop_toBottomOf="@id/tv_comment_all"
        app:layout_constraintStart_toStartOf="@id/tv_comment_all"
        android:layout_marginTop="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>