<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserPostFragment">
    <GridLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:columnCount="3"
        android:rowCount="2"
        android:orientation="horizontal"
        android:alignmentMode="alignBounds"
        android:useDefaultMargins="false">

        <ImageView
            android:id="@+id/iv_post1"
            android:layout_height="118dp"
            android:layout_width="118dp"
            android:src="@drawable/img_sample"
            android:layout_column="0"></ImageView>
        <ImageView
            android:id="@+id/iv_post2"
            android:layout_height="118dp"
            android:layout_width="118dp"
            android:src="@drawable/img_sample"
            android:layout_column="1"></ImageView>
        <ImageView
            android:id="@+id/iv_post3"
            android:layout_height="118dp"
            android:layout_width="118dp"
            android:src="@drawable/img_sample"
            android:layout_column="2"></ImageView>
        <ImageView
            android:id="@+id/iv_post4"></ImageView>
        <ImageView
            android:id="@+id/iv_post5"></ImageView>
        <ImageView
            android:id="@+id/iv_post6"></ImageView>

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>