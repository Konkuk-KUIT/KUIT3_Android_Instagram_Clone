<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <ImageView
        android:id="@+id/iv_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_previous"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="9dp"
        android:layout_marginStart="3dp"/>

    <TextView
        android:id="@+id/tv_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 편집"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="14dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12sp"/>
    
    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="#DBDBDB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_profile"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_edit_profile_img"
        android:layout_width="74dp"
        android:layout_height="74dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_line"
        android:background="#D9D9D9"
        android:layout_marginTop="15dp"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
        android:layout_marginStart="96dp"/>
    
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="74dp"
        android:layout_height="74dp"
        app:layout_constraintTop_toBottomOf="@id/v_line"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/siv_edit_profile_img"
        android:layout_marginStart="19dp"
        app:strokeColor="#DBDBDB"
        app:strokeWidth="1dp"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"/>

    <TextView
        android:id="@+id/tv_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#029CFE"
        android:text="사진 또는 아바타 수정"
        app:layout_constraintTop_toBottomOf="@id/siv_edit_profile_img"
        app:layout_constraintStart_toStartOf="@id/siv_edit_profile_img"
        android:layout_marginTop="16dp"
        android:layout_marginStart="35dp"/>


    <View
        android:id="@+id/v_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DBDBDB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_button"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:layout_marginTop="15dp"
        android:layout_marginStart="14dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/v_line2"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 이름이 들어가는 자리"
        android:layout_marginStart="101dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="242dp"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="17dp"
        android:background="#DBDBDB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name_input" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 이름"
        android:layout_marginTop="59dp"
        android:layout_marginStart="14dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/v_line2"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_user_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 아이디가 들어가는 자리"
        android:layout_marginStart="101dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@id/tv_user_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_user_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="242dp"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="17dp"
        android:background="#DBDBDB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name_input" />


    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별 대명사"
        android:layout_marginTop="103dp"
        android:layout_marginStart="14dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/v_line2"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_gender_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별 대명사"
        android:layout_marginStart="101dp"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@+id/tv_gender"
        app:layout_constraintBottom_toBottomOf="@+id/tv_gender"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="242dp"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="17dp"
        android:background="#DBDBDB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_gender_input" />

    <TextView
        android:id="@+id/tv_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소개"
        android:layout_marginTop="147dp"
        android:layout_marginStart="14dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/v_line2"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_introduce_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소개"
        android:layout_marginStart="101dp"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@+id/tv_introduce"
        app:layout_constraintBottom_toBottomOf="@+id/tv_introduce"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="242dp"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="17dp"
        android:background="#DBDBDB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_introduce_input" />

    <TextView
        android:id="@+id/tv_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="링크"
        android:layout_marginTop="191dp"
        android:layout_marginStart="14dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/v_line2"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_link_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="링크 추가"
        android:layout_marginStart="101dp"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@+id/tv_link"
        app:layout_constraintBottom_toBottomOf="@+id/tv_link"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/v_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="#DBDBDB"
        app:layout_constraintTop_toBottomOf="@+id/tv_link_input" />

    <ImageView
        android:id="@+id/iv_link_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_right"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/tv_link_input"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_switch_professional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로페셔널 계정으로 전환"
        android:textSize="12sp"
        android:textColor="#0097FE"
        app:layout_constraintTop_toTopOf="@+id/v_line3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="14dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#DBDBDB"
        app:layout_constraintTop_toBottomOf="@+id/tv_switch_professional" />

    <TextView
        android:id="@+id/tv_personal_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보 설정"
        android:textSize="12sp"
        android:textColor="#0097FE"
        app:layout_constraintTop_toTopOf="@+id/v_line3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="14dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#DBDBDB"
        app:layout_constraintTop_toBottomOf="@+id/tv_personal_info" />

    <TextView
        android:id="@+id/tv_meta_verified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meta Verified 가입하기"
        android:textSize="12sp"
        android:textColor="#0097FE"
        app:layout_constraintTop_toTopOf="@+id/v_line3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="105dp"
        android:layout_marginStart="14dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#DBDBDB"
        app:layout_constraintTop_toBottomOf="@+id/tv_meta_verified" />
    


</androidx.constraintlayout.widget.ConstraintLayout>