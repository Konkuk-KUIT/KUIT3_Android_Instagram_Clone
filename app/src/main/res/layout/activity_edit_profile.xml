<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <ImageView
        android:id="@+id/ic_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 편집"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"/>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#DBDBDB"
        android:layout_marginTop="13dp"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_edit_img_gray"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:src="@drawable/ic_edit_ellipse_70"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:layout_marginTop="14dp"
        android:layout_marginStart="98dp"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_edit_img_white"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:src="@drawable/ic_ellipse_92"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:layout_marginTop="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="97dp"
        app:layout_constraintStart_toEndOf="@id/siv_edit_img_gray"/>


    <TextView
        android:id="@+id/tv_edit_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진 또는 아바타 수정"
        android:textSize="12sp"
        android:textColor="#029CFE"
        app:layout_constraintTop_toBottomOf="@id/siv_edit_img_gray"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="132dp"
        android:layout_marginTop="16dp"/>
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_img"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#DBDBDB"
        android:layout_marginTop="15dp"/>
    
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/tv_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 이름 자리"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/iv_line_3"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/iv_line_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line_25"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="101dp"
        android:layout_marginTop="15dp" />
    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 이름"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/iv_line_3"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/tv_edit_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 아이디 자리"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/iv_line_4"
        app:layout_constraintTop_toBottomOf="@id/iv_line_3"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/iv_line_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line_25"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_id"
        app:layout_constraintStart_toStartOf="@id/tv_edit_name"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별 대명사"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/tv_id"
        app:layout_constraintTop_toBottomOf="@id/iv_line_4"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/tv_edit_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별 대명사 추가"
        android:textColor="#CDCDCF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/iv_line_5"
        app:layout_constraintTop_toBottomOf="@id/iv_line_4"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/iv_line_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line_25"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_gender"
        app:layout_constraintStart_toStartOf="@id/tv_edit_name"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tv_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="소개"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/tv_id"
        app:layout_constraintTop_toBottomOf="@id/iv_line_5" />
    <TextView
        android:id="@+id/tv_edit_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소개 추가"
        android:textColor="#CDCDCF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/iv_line_6"
        app:layout_constraintTop_toBottomOf="@id/iv_line_5"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/iv_line_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line_25"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_intro"
        app:layout_constraintStart_toStartOf="@id/tv_edit_name"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tv_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="링크"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/tv_id"
        app:layout_constraintTop_toBottomOf="@id/iv_line_6" />
    <TextView
        android:id="@+id/tv_edit_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="링크 추가"
        android:textColor="#CDCDCF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/iv_line_6"
        app:layout_constraintTop_toBottomOf="@id/iv_line_6"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/iv_line_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line_30"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_link"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"/>

    <TextView
        android:id="@+id/tv_professional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로페셔널 계정으로 전환"
        android:textSize="12sp"
        android:textColor="#029CFE"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toBottomOf="@id/iv_line_7"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/iv_line_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line_30"
        app:layout_constraintTop_toBottomOf="@id/tv_professional"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/tv_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인 정보 설정"
        android:textSize="12sp"
        android:textColor="#029CFE"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toBottomOf="@id/iv_line_8"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/iv_line_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line_30"
        app:layout_constraintTop_toBottomOf="@id/tv_settings"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/tv_meta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meta Verified 가입하기"
        android:textSize="12sp"
        android:textColor="#029CFE"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toBottomOf="@id/iv_line_9"
        android:layout_marginTop="15dp"/>

  </androidx.constraintlayout.widget.ConstraintLayout>