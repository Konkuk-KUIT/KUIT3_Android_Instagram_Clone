<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PostDetailFragment">

    <ImageView
        android:id="@+id/iv_edit_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:src="@drawable/ic_back_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/ll_post_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디가 들어갈 자리"
            android:textSize="12sp">

        </TextView>

        <TextView
            android:id="@+id/tv_post_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="게시물"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="#CFCFCF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_post_detail_title" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_edit_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/img_sample"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

    <TextView
        android:id="@+id/tv_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="id값이 들어가는 자리입니다."
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/siv_edit_profile"
        app:layout_constraintTop_toTopOf="@id/siv_edit_profile" />


    <ImageView
        android:id="@+id/iv_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/line1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_options"></ImageView>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_postimage"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        app:layout_constraintTop_toBottomOf="@id/siv_edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="11dp"></androidx.viewpager2.widget.ViewPager2>

    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/id_postimage"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/vp_postimage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"
        app:dotsSize="10dp"
        app:dotsColor="#BDBDBD"
        app:selectedDotColor="#69ACD8"
        app:dotsSpacing="4dp"
        app:dotsWidthFactor="0">

    </com.tbuonomo.viewpagerdotsindicator.DotsIndicator>

    <FrameLayout
        android:id="@+id/fl_like"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/vp_postimage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp">

        <ImageView
            android:id="@+id/iv_like_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_like_empty"></ImageView>

        <ImageView
            android:id="@+id/iv_like_filled"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_like_filled"
            android:visibility="invisible"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/vp_postimage"
        app:layout_constraintStart_toEndOf="@id/fl_like"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="13dp"
        android:src="@drawable/ic_comment" />

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/vp_postimage"
        app:layout_constraintStart_toEndOf="@id/iv_comment"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="13dp"
        android:src="@drawable/ic_share" />

    <ImageView
        android:id="@+id/iv_save"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/vp_postimage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_save" />

    <TextView
        android:id="@+id/tv_id_like"
        android:layout_marginLeft="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kuit.official"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/fl_like"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="님 외 여러 명이 좋아합니다."
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/fl_like"
        app:layout_constraintStart_toEndOf="@id/tv_id_like"
        android:layout_marginTop="8dp">
    </TextView>

    <TextView
        android:id="@+id/tv_id_post"
        android:layout_marginLeft="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kuit.official"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_id_like"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>

    <TextView
        android:id="@+id/tv_post_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요. 쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요.  쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요."
        android:textSize="10sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/tv_id_like"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="79dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="3dp">
    </TextView>

    <TextView
        android:id="@+id/tv_post_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글 모두 보기"
        android:textSize="10sp"
        android:textColor="#BDBDBD"
        app:layout_constraintTop_toBottomOf="@id/tv_post_text"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="14dp"/>

    <TextView
        android:id="@+id/tv_post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024년 03월"
        android:textSize="10sp"
        android:textColor="#BDBDBD"
        app:layout_constraintTop_toBottomOf="@id/tv_post_reply"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="14dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>