<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl_main"
    tools:context=".HomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_home"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_home_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/logo"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="16dp"/>

                        <ImageView
                            android:id="@+id/iv_home_notice"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_like_empty"
                            app:layout_constraintTop_toTopOf="@id/iv_home_logo"
                            app:layout_constraintEnd_toStartOf="@id/iv_home_dm"
                            app:layout_constraintBottom_toBottomOf="@id/iv_home_logo"
                            android:layout_marginEnd="20dp" />

                        <ImageView
                            android:id="@+id/iv_home_dm"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_share"
                            app:layout_constraintTop_toTopOf="@id/iv_home_logo"
                            app:layout_constraintBottom_toBottomOf="@id/iv_home_logo"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="14dp"/>

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/siv_home_my_story"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:src="@drawable/img_sample"
                            app:layout_constraintTop_toBottomOf="@id/iv_home_logo"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="14dp"
                            android:layout_marginStart="14dp"
                            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"/>

                        <ImageView
                            android:id="@+id/iv_home_my_story_circle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_circle_color"
                            app:layout_constraintTop_toTopOf="@id/siv_home_my_story"
                            app:layout_constraintStart_toStartOf="@id/siv_home_my_story"
                            app:layout_constraintBottom_toBottomOf="@id/siv_home_my_story"
                            app:layout_constraintEnd_toEndOf="@id/siv_home_my_story"/>

                        <ImageView
                            android:id="@+id/iv_home_my_story_circle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_circle_gray"
                            app:layout_constraintTop_toTopOf="@id/siv_home_my_story"
                            app:layout_constraintStart_toStartOf="@id/siv_home_my_story"
                            app:layout_constraintBottom_toBottomOf="@id/siv_home_my_story"
                            app:layout_constraintEnd_toEndOf="@id/siv_home_my_story"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/iv_home_story_plus_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_story_plus"
                            app:layout_constraintBottom_toBottomOf="@id/siv_home_my_story"
                            app:layout_constraintEnd_toEndOf="@id/siv_home_my_story"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="내 스토리"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toBottomOf="@id/siv_home_my_story"
                            app:layout_constraintStart_toStartOf="@id/siv_home_my_story"
                            app:layout_constraintEnd_toEndOf="@id/siv_home_my_story"
                            android:layout_marginTop="10dp"/>

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/siv_home_story1"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:src="@drawable/img_sample"
                            app:layout_constraintTop_toBottomOf="@id/iv_home_logo"
                            app:layout_constraintStart_toEndOf="@id/siv_home_my_story"
                            android:layout_marginTop="14dp"
                            android:layout_marginStart="24dp"
                            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"/>

                        <ImageView
                            android:id="@+id/iv_home_story1_circle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_circle_color"
                            app:layout_constraintTop_toTopOf="@id/siv_home_story1"
                            app:layout_constraintStart_toStartOf="@id/siv_home_story1"
                            app:layout_constraintBottom_toBottomOf="@id/siv_home_story1"
                            app:layout_constraintEnd_toEndOf="@id/siv_home_story1"/>

                        <ImageView
                            android:id="@+id/iv_home_story1_circle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_circle_gray"
                            app:layout_constraintTop_toTopOf="@id/siv_home_story1"
                            app:layout_constraintStart_toStartOf="@id/siv_home_story1"
                            app:layout_constraintBottom_toBottomOf="@id/siv_home_story1"
                            app:layout_constraintEnd_toEndOf="@id/siv_home_story1"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/tv_home_story1_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ri._.nny"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toBottomOf="@id/siv_home_story1"
                            app:layout_constraintStart_toStartOf="@id/siv_home_story1"
                            app:layout_constraintEnd_toEndOf="@id/siv_home_story1"
                            android:layout_marginTop="10dp"/>

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/siv_home_story2"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:src="@drawable/img_sample"
                            app:layout_constraintTop_toBottomOf="@id/iv_home_logo"
                            app:layout_constraintStart_toEndOf="@id/siv_home_story1"
                            android:layout_marginTop="14dp"
                            android:layout_marginStart="24dp"
                            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"/>

                        <ImageView
                            android:id="@+id/iv_home_story2_circle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_circle_color"
                            app:layout_constraintTop_toTopOf="@id/siv_home_story2"
                            app:layout_constraintStart_toStartOf="@id/siv_home_story2"
                            app:layout_constraintBottom_toBottomOf="@id/siv_home_story2"
                            app:layout_constraintEnd_toEndOf="@id/siv_home_story2"/>

                        <ImageView
                            android:id="@+id/iv_home_story2_circle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_circle_gray"
                            app:layout_constraintTop_toTopOf="@id/siv_home_story2"
                            app:layout_constraintStart_toStartOf="@id/siv_home_story2"
                            app:layout_constraintBottom_toBottomOf="@id/siv_home_story2"
                            app:layout_constraintEnd_toEndOf="@id/siv_home_story2"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/tv_home_story2_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ri._.nny"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toBottomOf="@id/siv_home_story2"
                            app:layout_constraintStart_toStartOf="@id/siv_home_story2"
                            app:layout_constraintEnd_toEndOf="@id/siv_home_story2"
                            android:layout_marginTop="10dp"/>

                        <View
                            android:id="@+id/line1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            app:layout_constraintTop_toBottomOf="@id/siv_home_my_story"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="#DBDBDB"
                            android:layout_marginTop="40dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--여기까지 실습-->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_post"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    tools:listitem="@layout/item_home"
                    app:layout_constraintTop_toBottomOf="@id/cl_home"
                    app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>
