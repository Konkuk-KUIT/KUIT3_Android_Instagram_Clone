<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_home_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="21dp"
                android:src="@drawable/ic_like"
                app:layout_constraintEnd_toStartOf="@id/iv_home_dm"
                app:layout_constraintTop_toTopOf="@id/iv_home_dm" />

            <ImageView
                android:id="@+id/iv_home_dm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="14dp"
                android:src="@drawable/ic_share"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/siv_home_my_story"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/img_sample"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_home_logo"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

            <FrameLayout
                android:id="@+id/fl_home_my_story"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/siv_home_my_story"
                app:layout_constraintEnd_toEndOf="@id/siv_home_my_story"
                app:layout_constraintStart_toStartOf="@id/siv_home_my_story"
                app:layout_constraintTop_toTopOf="@id/siv_home_my_story">

                <ImageView
                    android:id="@+id/iv_home_my_story_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_story_gray" />

                <ImageView
                    android:id="@+id/iv_home_my_story_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_story_color"
                    android:visibility="gone" />

            </FrameLayout>

            <ImageView
                android:id="@+id/iv_home_my_story_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_story_plus"
                app:layout_constraintBottom_toBottomOf="@id/siv_home_my_story"
                app:layout_constraintEnd_toEndOf="@id/siv_home_my_story" />

            <TextView
                android:id="@+id/tv_home_my_story"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="내 스토리"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/siv_home_my_story"
                app:layout_constraintStart_toStartOf="@id/siv_home_my_story"
                app:layout_constraintTop_toBottomOf="@id/siv_home_my_story" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/siv_home_story_1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="17dp"
                android:src="@drawable/img_sample2"
                app:layout_constraintBottom_toBottomOf="@id/siv_home_my_story"
                app:layout_constraintStart_toEndOf="@id/siv_home_my_story"
                app:layout_constraintTop_toTopOf="@id/siv_home_my_story"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

            <FrameLayout
                android:id="@+id/fl_home_story_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/siv_home_story_1"
                app:layout_constraintEnd_toEndOf="@id/siv_home_story_1"
                app:layout_constraintStart_toStartOf="@id/siv_home_story_1"
                app:layout_constraintTop_toTopOf="@id/siv_home_story_1">

                <ImageView
                    android:id="@+id/iv_home_story_gray_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_story_gray"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_home_story_color_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_story_color" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_home_story_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="@string/instagram_id"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/siv_home_story_1"
                app:layout_constraintStart_toStartOf="@id/siv_home_story_1"
                app:layout_constraintTop_toBottomOf="@id/siv_home_story_1" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/siv_home_story_2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="17dp"
                android:src="@drawable/img_sample2"
                app:layout_constraintBottom_toBottomOf="@id/siv_home_story_1"
                app:layout_constraintStart_toEndOf="@id/siv_home_story_1"
                app:layout_constraintTop_toTopOf="@id/siv_home_story_1"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

            <FrameLayout
                android:id="@+id/fl_home_story_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/siv_home_story_2"
                app:layout_constraintEnd_toEndOf="@id/siv_home_story_2"
                app:layout_constraintStart_toStartOf="@id/siv_home_story_2"
                app:layout_constraintTop_toTopOf="@id/siv_home_story_2">

                <ImageView
                    android:id="@+id/iv_home_story_gray_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_story_gray"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_home_story_color_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_story_color" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_home_story_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="@string/instagram_id"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/siv_home_story_2"
                app:layout_constraintStart_toStartOf="@id/siv_home_story_2"
                app:layout_constraintTop_toBottomOf="@id/siv_home_story_2" />

            <View
                android:id="@+id/v_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DBDBDB"
                app:layout_constraintTop_toBottomOf="@id/tv_home_my_story" />

            <!--           여기서부터 메인 페이지 -->

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/siv_home_profile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/img_sample2"
                app:layout_constraintTop_toBottomOf="@id/v_line"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

            <FrameLayout
                android:id="@+id/fl_home_profile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:layout_constraintBottom_toBottomOf="@id/siv_home_profile"
                app:layout_constraintEnd_toEndOf="@id/siv_home_profile"
                app:layout_constraintStart_toStartOf="@id/siv_home_profile"
                app:layout_constraintTop_toTopOf="@id/siv_home_profile">

                <ImageView
                    android:id="@+id/iv_home_profile_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_story_gray"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_home_profile_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_story_color" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instagram_id"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/siv_home_profile"
                app:layout_constraintTop_toTopOf="@+id/siv_home_profile"
                app:layout_constraintBottom_toBottomOf="@+id/siv_home_profile"
                android:layout_marginStart="9dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_options"
                app:layout_constraintTop_toTopOf="@+id/v_line"
                app:layout_constraintEnd_toEndOf="@+id/v_line"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="14dp"/>

            <View
                android:id="@+id/v_post"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:background="#D9D9D9"
                app:layout_constraintTop_toBottomOf="@+id/siv_home_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="11dp"/>

            <ImageView
                android:id="@+id/btn_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_like"
                app:layout_constraintTop_toBottomOf="@+id/v_post"
                app:layout_constraintStart_toStartOf="@+id/v_post"
                android:layout_marginTop="9dp"
                android:layout_marginStart="12dp"/>

            <ImageView
                android:id="@+id/btn_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comment"
                app:layout_constraintStart_toEndOf="@+id/btn_like"
                app:layout_constraintTop_toTopOf="@+id/btn_like"
                android:layout_marginStart="13dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share"
                app:layout_constraintStart_toEndOf="@+id/btn_comment"
                app:layout_constraintTop_toTopOf="@id/btn_comment"
                android:layout_marginStart="13dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_save"
                app:layout_constraintEnd_toEndOf="@+id/v_post"
                app:layout_constraintTop_toBottomOf="@+id/v_post"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="15dp"/>

            <TextView
                android:id="@+id/tv_home_post_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instagram_id"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/btn_like"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="님 외 여러 명이 좋아합니다"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintTop_toTopOf="@+id/tv_home_post_id"
                app:layout_constraintStart_toEndOf="@+id/tv_home_post_id"/>

            <TextView
                android:id="@+id/tv_home_comment_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instagram_id"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/tv_home_post_id"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="3dp"
                android:layout_marginStart="12dp"/>

            <TextView
                android:id="@+id/tv_home_comment"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요 쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요 쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요 쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toEndOf="@+id/tv_home_comment_id"
                app:layout_constraintTop_toTopOf="@+id/tv_home_comment_id" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="더 보기"
                android:textColor="#737373"
                android:textSize="10sp"
                app:layout_constraintTop_toTopOf="@+id/tv_home_comment"
                app:layout_constraintStart_toEndOf="@+id/tv_home_comment"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>