<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="home 화면"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/iv_home_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

            <ImageView
                android:id="@+id/iv_home_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginRight="21dp"
                android:src="@drawable/ic_like_empty"
                app:layout_constraintEnd_toStartOf="@id/iv_home_share"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

            <ImageView
                android:id="@+id/iv_home_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginRight="14dp"
                android:src="@drawable/ic_share"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ly_profile1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_home_logo">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ic_profile1"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginHorizontal="11dp"
                    android:layout_marginTop="13dp"
                    android:src="@drawable/img_sample"
                    app:layout_constraintStart_toStartOf="@id/ic_circle"
                    app:layout_constraintTop_toTopOf="@id/ic_circle"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full">

                </com.google.android.material.imageview.ShapeableImageView>
<FrameLayout
    android:id="@+id/ic_circle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/ic_profile_margin"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_graycircle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </ImageView>

    <ImageView
        android:id="@+id/ic_profile_margin_colored"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_coloredcircle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>
</FrameLayout>
                <ImageView
                    android:id="@+id/ic_profile_add"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="51dp"
                    android:layout_marginTop="51dp"
                    android:src="@drawable/component_2"
                    app:layout_constraintStart_toStartOf="@id/ic_profile1"
                    app:layout_constraintTop_toTopOf="@id/ic_profile1">

                </ImageView>

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="내 스토리"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ic_circle">

                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ly_profile2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                app:layout_constraintStart_toEndOf="@id/ly_profile1"
                app:layout_constraintTop_toBottomOf="@id/iv_home_logo">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ic_profile2"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/img_sample2"
                    app:layout_constraintStart_toStartOf="@id/ic_profile_margin2"
                    app:layout_constraintTop_toTopOf="@id/ic_profile_margin2"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full">

                </com.google.android.material.imageview.ShapeableImageView>

                <ImageView
                    android:id="@+id/ic_profile_margin2"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_coloredcircle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </ImageView>

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="kuit.official"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ic_profile_margin2">

                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ly_profile3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                app:layout_constraintStart_toEndOf="@id/ly_profile2"
                app:layout_constraintTop_toBottomOf="@id/iv_home_logo">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ic_profile3"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/img_sample2"
                    app:layout_constraintStart_toStartOf="@id/ic_profile_margin3"
                    app:layout_constraintTop_toTopOf="@id/ic_profile_margin3"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full">

                </com.google.android.material.imageview.ShapeableImageView>

                <ImageView
                    android:id="@+id/ic_profile_margin3"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_coloredcircle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </ImageView>

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="kuit.official"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ic_profile_margin3">

                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ly_profile4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                app:layout_constraintStart_toEndOf="@id/ly_profile3"
                app:layout_constraintTop_toBottomOf="@id/iv_home_logo">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ic_profile4"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/img_sample2"
                    app:layout_constraintStart_toStartOf="@id/ic_profile_margin4"
                    app:layout_constraintTop_toTopOf="@id/ic_profile_margin4"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full">

                </com.google.android.material.imageview.ShapeableImageView>

                <ImageView
                    android:id="@+id/ic_profile_margin4"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_coloredcircle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </ImageView>

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="kuit.official"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ic_profile_margin4">

                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/ly_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#A3A3A3"
                app:layout_constraintTop_toBottomOf="@id/ly_profile1"></View>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ly_profile5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ly_line1">
<FrameLayout
    android:id="@+id/profile5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ic_profile5"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/img_sample2"
                    app:layout_constraintStart_toStartOf="@id/ic_profile_margin5"
                    app:layout_constraintTop_toTopOf="@id/ic_profile_margin5"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full">

                </com.google.android.material.imageview.ShapeableImageView>

                <ImageView
                    android:id="@+id/ic_profile_margin5"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_coloredcircle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </ImageView>
</FrameLayout>
                <TextView
                    android:id="@+id/text_profile5_name"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="kuit.official"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/profile5"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <ImageView
                    android:id="@+id/ic_menu"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="14dp"
                    android:src="@drawable/ic_options"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </ImageView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view_image"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_marginTop="6dp"
                android:background="#8E8E8E"
                app:layout_constraintTop_toBottomOf="@id/ly_profile5"
                tools:layout_editor_absoluteX="116dp">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/view_image">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/ic_like_empty">
                    </ImageView>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="13dp"
                        android:src="@drawable/ic_comment">
                    </ImageView>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="13dp"
                        android:src="@drawable/ic_share">
                    </ImageView>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="255dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_save">
                    </ImageView>
                    
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kuit.official"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="님 외 여러 명이 좋아합니다."
                        android:textSize="12sp">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">
                    <TextView
                        android:id="@+id/text_id"
                        android:layout_marginLeft="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kuit.official"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/text_writing"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요. 이 뒤의 내용은 잘립니다."
                        android:textSize="12sp"></TextView>

                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>