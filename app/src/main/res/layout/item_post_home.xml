<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_item_profile_image"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/img_sample2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

    <FrameLayout
        android:id="@+id/fl_item_post"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="@id/siv_item_profile_image"
        app:layout_constraintEnd_toEndOf="@id/siv_item_profile_image"
        app:layout_constraintStart_toStartOf="@id/siv_item_profile_image"
        app:layout_constraintTop_toTopOf="@id/siv_item_profile_image">

        <ImageView
            android:id="@+id/iv_item_post_image_gray"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_story_gray"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_item_item_post_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_story_color" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_item_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="kuit.official"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/fl_item_post"
        app:layout_constraintStart_toEndOf="@id/fl_item_post"
        app:layout_constraintTop_toTopOf="@id/fl_item_post" />

    <ImageView
        android:id="@+id/iv_item_post_image_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/ic_options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_item_post_image"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="6dp"
        android:background="#D9D9D9"
        app:layout_constraintTop_toBottomOf="@id/fl_item_post" />

    <ImageView
        android:id="@+id/iv_item_post_image_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_like"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_item_post_image" />

    <ImageView
        android:id="@+id/iv_item_post_image_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_comment"
        app:layout_constraintStart_toEndOf="@id/iv_item_post_image_like"
        app:layout_constraintTop_toBottomOf="@id/iv_item_post_image" />

    <ImageView
        android:id="@+id/iv_item_post_image_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_share"
        app:layout_constraintStart_toEndOf="@id/iv_item_post_image_comments"
        app:layout_constraintTop_toBottomOf="@id/iv_item_post_image" />

    <ImageView
        android:id="@+id/iv_item_post_image_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_item_post_image" />

    <TextView
        android:id="@+id/tv_item_post_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:text="kuit.official"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_item_post_image_like" />

    <TextView
        android:id="@+id/tv_item_post_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="님 외"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_post_text1"
        app:layout_constraintStart_toEndOf="@id/tv_item_post_text1"
        app:layout_constraintTop_toTopOf="@id/tv_item_post_text1" />

    <TextView
        android:id="@+id/tv_item_post_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="여러 명"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_post_text1"
        app:layout_constraintStart_toEndOf="@id/tv_item_post_text2"
        app:layout_constraintTop_toTopOf="@id/tv_item_post_text1" />

    <TextView
        android:id="@+id/tv_item_post_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="이 좋아합니다."
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_post_text1"
        app:layout_constraintStart_toEndOf="@id/tv_item_post_text3"
        app:layout_constraintTop_toTopOf="@id/tv_item_post_text1" />

    <TextView
        android:id="@+id/tv_item_post_commenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="3dp"
        android:text="kuit.official"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_post_text1" />

    <TextView
        android:id="@+id/tv_item_post_contents"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요. 쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요.
                    쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요. 쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요.
                    쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요."
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="10sp"

        app:layout_constraintStart_toEndOf="@id/tv_item_post_commenter"
        app:layout_constraintTop_toTopOf="@id/tv_item_post_commenter" />

    <TextView
        android:id="@+id/tv_item_post_show_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더 보기"
        android:textColor="#737373"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_post_commenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_item_post_commenter" />

</androidx.constraintlayout.widget.ConstraintLayout>