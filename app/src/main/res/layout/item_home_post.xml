<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_post_profile"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

    <FrameLayout
        android:id="@+id/fl_post_story"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="@id/siv_post_profile"
        app:layout_constraintEnd_toEndOf="@id/siv_post_profile"
        app:layout_constraintStart_toStartOf="@id/siv_post_profile"
        app:layout_constraintTop_toTopOf="@id/siv_post_profile">

        <ImageView
            android:id="@+id/iv_post_story_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_story_color" />

        <ImageView
            android:id="@+id/iv_post_story_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_story_gray"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_post_userid_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:text="userid"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/siv_post_profile"
        app:layout_constraintStart_toEndOf="@id/siv_post_profile"
        app:layout_constraintTop_toTopOf="@id/siv_post_profile" />

    <ImageView
        android:id="@+id/iv_post_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:src="@drawable/ic_options"
        app:layout_constraintBottom_toBottomOf="@id/siv_post_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/siv_post_profile" />

    <ImageView
        android:id="@+id/iv_post_img"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/siv_post_profile" />

    <ImageView
        android:id="@+id/iv_post_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_like"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_post_img" />

    <ImageView
        android:id="@+id/iv_post_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_comment"
        app:layout_constraintStart_toEndOf="@id/iv_post_like"
        app:layout_constraintTop_toBottomOf="@id/iv_post_img" />

    <ImageView
        android:id="@+id/iv_post_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_share"
        app:layout_constraintStart_toEndOf="@id/iv_post_like"
        app:layout_constraintTop_toBottomOf="@id/iv_post_img" />

    <ImageView
        android:id="@+id/iv_post_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_post_img" />

    <TextView
        android:id="@+id/tv_post_like_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:text="kuit.official"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_post_like" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="님 외 여려명이 좋아합니다"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/tv_post_like_id"
        app:layout_constraintTop_toBottomOf="@id/iv_post_img" />

    <TextView
        android:id="@+id/tv_post_userid_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="27dp"
        android:text="userid"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_post_like" />

    <TextView
        android:id="@+id/tv_post_content"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="게시글이 들어갈 자리"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/tv_post_userid_small"
        app:layout_constraintTop_toBottomOf="@id/iv_post_like" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더보기"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_post_content"
        app:layout_constraintStart_toEndOf="@id/tv_post_content"
        app:layout_constraintTop_toTopOf="@id/tv_post_content" />

</androidx.constraintlayout.widget.ConstraintLayout>