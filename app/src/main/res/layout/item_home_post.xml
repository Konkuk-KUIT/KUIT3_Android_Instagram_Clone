<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_post_story"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/img_sample"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

    <FrameLayout
        android:id="@+id/fl_post_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/siv_post_story"
        app:layout_constraintEnd_toEndOf="@id/siv_post_story"
        app:layout_constraintStart_toStartOf="@id/siv_post_story"
        app:layout_constraintTop_toTopOf="@id/siv_post_story">

        <ImageView
            android:id="@+id/iv_post_story_color"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_story_color" />

        <ImageView
            android:id="@+id/iv_post_story_gray"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_story_gray"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_post_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kuit.official"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toEndOf="@id/fl_post_story"
        android:layout_marginStart="5dp"
        />

    <ImageView
        android:id="@+id/post_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_post_more"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="14dp"
        />

    <ImageView
        android:id="@+id/iv_post_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_post_pic"
        app:layout_constraintTop_toBottomOf="@id/fl_post_story"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        />

    <ImageView
        android:id="@+id/ic_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_like"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/iv_post_pic"
        android:layout_marginTop="9dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_comment"
        app:layout_constraintStart_toEndOf="@id/ic_like"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toTopOf="@id/ic_like"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share"
        app:layout_constraintStart_toEndOf="@id/ic_like"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toTopOf="@id/ic_like"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_save"
        app:layout_constraintTop_toTopOf="@id/ic_like"
        app:layout_constraintTop_toBottomOf="@id/post_more"
        app:layout_constraintStart_toEndOf="@id/ic_like"
        android:layout_marginStart="320dp"
        />

    <TextView
        android:id="@+id/tv_like_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kuit.official"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toBottomOf="@id/ic_like"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="님 외"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="77dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_like_account"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여러 명"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="104dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_like_account"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이 좋아합니다."
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="140dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_like_account"
        />

    <TextView
        android:id="@+id/tv_comment_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kuit.official"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_like_account"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/tv_post_content"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="떠나는 길에 네가 내게 말했지 너는 바라는 게 너무나 많아
                                  잠깐이라도 널 안 바라보면 머리에 불이 나버린다니까"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/tv_comment_account"
        app:layout_constraintTop_toTopOf="@id/tv_comment_account"
        android:layout_marginStart="4dp"/>

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더보기"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/tv_comment_account"
        app:layout_constraintBottom_toBottomOf="@id/tv_comment_account"
        android:layout_marginStart="285dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>