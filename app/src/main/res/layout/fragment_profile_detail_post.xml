<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile.profile_main.ProfileDetailPostFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp"
        android:src="@drawable/ic_chevron_left"/>

    <TextView
        android:id="@+id/tv_profile_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="userID"
        android:textSize="12sp"
        android:fontFamily="@font/instagram_sans"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_profile_detail_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/inter_variablefont_slnt_wght"
        android:text="게시물"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_detail_userID" />

    <View
        android:id="@+id/v_profile_detail_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#DBDBDB"
        android:layout_marginTop="50dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_profile_detail_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img_sample"
        app:layout_constraintTop_toBottomOf="@id/v_profile_detail_line"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="14dp"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"/>

    <TextView
        android:id="@+id/tv_profile_detail_userID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id값이 들어가는 자리입니다."
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/instagram_sans"
        app:layout_constraintTop_toTopOf="@id/siv_profile_detail_profile"
        app:layout_constraintStart_toEndOf="@id/siv_profile_detail_profile"
        android:layout_marginStart="14dp"/>

    <ImageView
        android:id="@+id/iv_profile_detail_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_profile_detail_line"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="10dp"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_profile_detail_post"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@id/siv_profile_detail_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <FrameLayout
        android:id="@+id/fl_profile_detail_post_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vp_profile_detail_post"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp">
        
        <ImageView
            android:id="@+id/iv_profile_detail_post_like_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_like"/>

        <ImageView
            android:id="@+id/iv_profile_detail_post_like_filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_like__filled"
            android:visibility="invisible"/>
            
    </FrameLayout>

    
    <ImageView
        android:id="@+id/iv_profile_detail_post_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_comment"
        app:layout_constraintStart_toEndOf="@id/fl_profile_detail_post_like"
        app:layout_constraintTop_toBottomOf="@id/vp_profile_detail_post" />

    <ImageView
        android:id="@+id/iv_profile_detail_post_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_share"
        app:layout_constraintStart_toEndOf="@id/iv_profile_detail_post_comments"
        app:layout_constraintTop_toBottomOf="@id/vp_profile_detail_post" />

    <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
        android:id="@+id/sdi_profile_detail_post_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vp_profile_detail_post"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"
        app:dampingRatio="0.5"
        app:dotsColor="#0097EE"
        app:dotsStrokeColor="#DBDBDB"
        app:dotsCornerRadius="100dp"
        app:dotsSize="6dp"
        app:dotsSpacing="4dp"
        app:dotsStrokeWidth="2dp"
        app:stiffness="300" />


    <ImageView
        android:id="@+id/iv_profile_detail_post_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vp_profile_detail_post" />

    <TextView
        android:id="@+id/tv_profile_detail_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:text="kuit.official"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/instagram_sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fl_profile_detail_post_like" />

    <TextView
        android:id="@+id/tv_profile_detail_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="님 외"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:fontFamily="@font/instagram_sans"
        app:layout_constraintBottom_toBottomOf="@id/tv_profile_detail_text1"
        app:layout_constraintStart_toEndOf="@id/tv_profile_detail_text1"
        app:layout_constraintTop_toTopOf="@id/tv_profile_detail_text1" />

    <TextView
        android:id="@+id/tv_profile_detail_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="여러 명"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:fontFamily="@font/instagram_sans"
        app:layout_constraintBottom_toBottomOf="@id/tv_profile_detail_text1"
        app:layout_constraintStart_toEndOf="@id/tv_profile_detail_text2"
        app:layout_constraintTop_toTopOf="@id/tv_profile_detail_text1" />

    <TextView
        android:id="@+id/tv_profile_detail_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="이 좋아합니다."
        android:textColor="@color/black"
        android:textSize="10sp"
        android:fontFamily="@font/instagram_sans"
        app:layout_constraintBottom_toBottomOf="@id/tv_profile_detail_text1"
        app:layout_constraintStart_toEndOf="@id/tv_profile_detail_text3"
        app:layout_constraintTop_toTopOf="@id/tv_profile_detail_text1" />

    <TextView
        android:id="@+id/tv_profile_detail_commenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="3dp"
        android:text="kuit.official"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/instagram_sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_detail_text1" />

    <TextView
        android:id="@+id/tv_profile_detail_contents"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요. 쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요.
                    쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요. 쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요.
                    쿠잇 3기 시작합니다!! 다들 열심히 한 학기 마무리해봐요."
        android:maxLines="1"
        android:fontFamily="@font/instagram_sans"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="10sp"

        app:layout_constraintStart_toEndOf="@id/tv_profile_detail_commenter"
        app:layout_constraintTop_toTopOf="@id/tv_profile_detail_commenter" />

    <TextView
        android:id="@+id/tv_profile_detail_show_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더 보기"
        android:textSize="10sp"
        android:fontFamily="@font/instagram_sans"
        android:textColor="#737373"
        app:layout_constraintBottom_toBottomOf="@id/tv_profile_detail_commenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_profile_detail_commenter" />

</androidx.constraintlayout.widget.ConstraintLayout>